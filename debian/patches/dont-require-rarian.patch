@@ -1,20 +1,10 @@
 
 DOCS=legal.xml bless-manual.xml
-OMF=bless-manual.omf
 FIGURES=$(wildcard figures/*)
 
-CLEANFILES=$(OMF)
-
 noinst_SCRIPTS=$(OMF)
 
 
